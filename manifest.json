{
  "manifest_version": 3,
  "name": "Reel Watchlist",
  "version": "1.0",
  "description": "A movie tracker watchlist",
  "permissions": ["storage", "activeTab", "webRequest", "identity", "cookies"],
  "oauth2": {
    "client_id": "560576158141-lbk1674i8fs6matjg4vi8cik941h6hj1.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "https://www.google.com/search*",
    "http://localhost:4000/*",
    "https://reelwatchlist-backend.alekhkr.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/images/place-holder.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}
